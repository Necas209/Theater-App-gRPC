<Window x:Class="ClientApp.Views.WalletWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ClientApp.ViewModels"
        mc:Ignorable="d"
        Title="WalletWindow" Height="150" Width="300">
    <Window.DataContext>
        <vm:WalletViewModel />
    </Window.DataContext>
    <Grid>
        <Label Content="Adicionar Fundos" Margin="90 0 90 120" HorizontalAlignment="Center" />
        <Label Content="Saldo:" Margin="200 30 60 95" FontSize="10" HorizontalContentAlignment="Right" />
        <Label Margin="240 30 10 95" FontSize="10" Content="{Binding Client.Funds}" ContentStringFormat="C" />
        <Label Content="Método:" Margin="20 60 210 65" FontSize="10" HorizontalContentAlignment="Right" />
        <ComboBox Text="--Selecione o método" Focusable="True" Margin="90 60 80 70"
                  SelectedItem="{Binding PaymentMethod}">
            <ComboBoxItem>Multibanco</ComboBoxItem>
            <ComboBoxItem>Cartão de Crédito</ComboBoxItem>
            <ComboBoxItem>Paypal</ComboBoxItem>
            <ComboBoxItem>MB Way</ComboBoxItem>
        </ComboBox>
        <Label Content="Valor:" Margin="20 82 210 45" FontSize="10" HorizontalContentAlignment="Right" />
        <TextBox Margin="90 85 80 45" Text="{Binding AddedFunds}" />
        <Button Style="{DynamicResource RoundButton}" Content="Adicionar" Margin="220 120 10 10"
                Click="BtAddFunds_OnClick" />
    </Grid>
</Window>