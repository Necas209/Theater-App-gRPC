        <Label Content="Adicionar Sessões" FontSize="17" Margin="110 5 110 180" HorizontalAlignment="Center"></Label>
        <Label Content="Data:" Margin="20 40 300 155" HorizontalAlignment="Right"></Label>
        <DatePicker Margin="110 40 150 155"></DatePicker>
        <TextBox Text="Hora" Margin="260 40 30 155"></TextBox>
        <Label Content="Preço:" Margin="20 80 300 110" HorizontalAlignment="Right"></Label >
        <TextBox Margin="110 80 150 110" FontSize="10"  TextWrapping="WrapWithOverflow"/>
