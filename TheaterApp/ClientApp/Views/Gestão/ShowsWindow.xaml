<Window x:Class="ClientApp.Views.Gestão.ShowsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientApp.Views.Gestão"
        mc:Ignorable="d"
        Title="ShowsWindow" Height="340" Width="450">
    <Grid>
        <Label Content="Lista de Espetáculos" FontSize="17" Margin="130 5 130 300" HorizontalAlignment="Center"></Label>
        
        <ListView Margin="30 50 30 50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Espetáculo" Width="100"/>
                    <GridViewColumn Header="Sinopse" Width="100"/>
                    <GridViewColumn Header="Género" Width="100"/>
                    <GridViewColumn Header="Duração" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Eliminar" Margin="340 305 30 10"></Button>
        <Button Content="Editar" Margin="250 305 120 10"></Button>
        <Button Content="Adicionar" Margin="160 305 210 10"></Button>
    </Grid>
</Window>
