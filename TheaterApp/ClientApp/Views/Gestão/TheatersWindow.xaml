<Window x:Class="ClientApp.Views.Gestão.TheatersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientApp.Views.Gestão"
        mc:Ignorable="d"
        Title="TheatersWindow" Height="340" Width="515">
    <Grid>
        <Label Content="Lista de Teatros" FontSize="17" Margin="130 5 130 300" HorizontalAlignment="Center"></Label>
        
        <ListView Margin="30 50 30 50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Teatro" Width="90"/>
                    <GridViewColumn Header="Localização" Width="90"/>
                    <GridViewColumn Header="Endereço" Width="90"/>
                    <GridViewColumn Header="Email" Width="90"/>
                    <GridViewColumn Header="Nº Telefone" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Eliminar" Margin="405 305 30 10"></Button>
        <Button Content="Editar" Margin="315 305 120 10"></Button>
        <Button Content="Adicionar" Margin="225 305 210 10"></Button>
    </Grid>
</Window>
