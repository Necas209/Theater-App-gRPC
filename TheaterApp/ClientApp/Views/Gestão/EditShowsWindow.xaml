<Window x:Class="ClientApp.Views.Gestão.EditShowsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientApp.Views.Gestão"
        mc:Ignorable="d"
        Title="EditShowsWindow" Height="320" Width="400">
    <Grid>
        <Label Content="Editar Espetáculo" FontSize="17" Margin="110 5 110 235" HorizontalAlignment="Center"></Label>
        <Label Content="Nome:" Margin="20 40 300 225" HorizontalAlignment="Right"></Label>
        <TextBox Margin="110 40 100 255"></TextBox>
        <Label Content="Sinopse:" Margin="20 80 300 185" HorizontalAlignment="Right"></Label >
        <ScrollViewer Margin="110 80 100 132">
            <TextBox FontSize="10"  TextWrapping="WrapWithOverflow"/>
        </ScrollViewer>
        <Label Content="Género:" Margin="20 200 300 90" HorizontalAlignment="Right"></Label >
        <ComboBox Margin="110 200 170 90"></ComboBox>
        <Label Content="Duração:" Margin="20 240 300 50" HorizontalAlignment="Right"></Label>
        <TextBox Margin="110 240 170 50"></TextBox>
        <Button Content="Editar" Margin="280 280 20 10"></Button>
    </Grid>
</Window>
