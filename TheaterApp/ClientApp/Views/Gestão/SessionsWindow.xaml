<Window x:Class="ClientApp.Views.Gestão.SessionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientApp.Views.Gestão"
        mc:Ignorable="d"
        Title="SessionsListManager" Height="340" Width="450">
    <Grid>
        <Label Content="Lista de Sessões" FontSize="17" Margin="130 5 130 300" HorizontalAlignment="Center"></Label>
        
        <ListView Margin="30 50 30 50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Data/Hora" Width="130"/>
                    <GridViewColumn Header="Preço" Width="130"/>
                    <GridViewColumn Header="Lugares Vagos" Width="130"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Eliminar" Margin="340 305 30 10"></Button>
        <Button Content="Adicionar" Margin="250 305 120 10"></Button>
    </Grid>
</Window>
