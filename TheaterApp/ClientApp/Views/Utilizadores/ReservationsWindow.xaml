<Window x:Class="ClientApp.Views.Utilizadores.ReservationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ClientApp.ViewModels"
        mc:Ignorable="d"
        Title="Shows" Height="300" Width="550">
    <Window.DataContext>
        <vm:ReservationsViewModel />
    </Window.DataContext>
    <Grid>
        <Label Content="Espetáculos Assistidos" FontSize="17" Margin="130 5 130 260" HorizontalAlignment="Center" />
        <ListView Margin="30 50 130 10" ItemsSource="{Binding Reservations}">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Reservas">
                    <GridViewColumn Header="Espetáculos" Width="100" DisplayMemberBinding="{Binding Session.Show.Name}" />
                    <GridViewColumn Header="N.º Bilhetes" Width="100" DisplayMemberBinding="{Binding NoTickets}" />
                    <GridViewColumn Header="Valor Total" Width="100" DisplayMemberBinding="{Binding Total}" />
                    <GridViewColumn Header="Data" Width="100" DisplayMemberBinding="{Binding Session.Showtime}" />
                </GridView>
            </ListView.View>
        </ListView>
        <DatePicker Margin="430 50 10 220" IsTodayHighlighted="True" FirstDayOfWeek="Monday"
                    SelectedDate="{Binding StartDate}" />
        <DatePicker Margin="430 150 10 120" IsTodayHighlighted="True" FirstDayOfWeek="Monday"
                    SelectedDate="{Binding EndDate}" />
        <Button Style="{DynamicResource RoundButton}" Margin="450 220 30 50" Content="Filtrar" Click="BtFilter_OnClick" />
    </Grid>
</Window>