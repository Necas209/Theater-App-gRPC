<Window x:Class="ClientApp.Views.Shows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ClientApp.Views"
        mc:Ignorable="d"
        Title="Shows" Height="340" Width="450">
    <Grid>
        
        <Label Content="Bilhetes Comprados" FontSize="17" Margin="130 5 130 300" HorizontalAlignment="Center"></Label>
        
        <ListView Margin="30 50 30 50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Espetáculos" Width="100"/>
                    <GridViewColumn Header="N.º Bilhetes" Width="100"/>
                    <GridViewColumn Header="Preço" Width="100"/>
                    <GridViewColumn Header="Data" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button Style="{DynamicResource RoundButton }" Margin="270 300 30 10 " Content="Cancelar bilhete"></Button>
        
    </Grid>
</Window>
