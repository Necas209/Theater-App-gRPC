<Window x:Class="ClientApp.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <Grid>
        <TextBox Text="Pesquisa" Margin="300 10 300 420" />
        <Button Content="3.30€" Margin="700 8 45 416" Background="Transparent" BorderThickness="0" />
        <Image Margin="750 -10 0 400" Source="../Icons/icon.jpg" />
        <ListView Margin="30 50 30 50">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Localização" Width="150" />
                    <GridViewColumn Header="Teatro" Width="150" />
                    <GridViewColumn Header="Espetáculo" Width="185" />
                    <GridViewColumn Header="Sessão" Width="150" />
                    <GridViewColumn Header="Preço bilhete" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>