<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name="Message" Content="Greeting: "
               Margin="20 40 60 40" Width="200" Height="30"
               BorderBrush="Black" BorderThickness="1pt"></Label>
        <Button Name="BtSayHello" Content="Say Hello"
                Margin="320 40 0 40" Width="100" Height="30" Click="BtSayHello_OnClick"></Button>
    </Grid>
</Window>
