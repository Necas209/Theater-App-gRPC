<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="300">
    <Grid>
        <Label Content="UserName:" Margin="0 0 140 100" Width="90" Height="30" 
               FontSize="16" HorizontalContentAlignment="Right"></Label>
        <TextBox Name="TbUserName" Margin="110 0 10 100" Height="30" Width="120"></TextBox>
        <Label Content="Password:" Margin="0 100 140 100" Width="90" Height="30" 
               FontSize="16" HorizontalContentAlignment="Right"></Label>
        <PasswordBox Name="PbPassword" Margin="110 100 10 100" Height="30" Width="120" KeyDown="PbPassword_OnKeyDown"></PasswordBox>
        <Button Name="BtLogin" Content="Login"
                Margin="0 120 0 0" Width="100" Height="30" Click="BtLogin_OnClick"></Button>
    </Grid>
</Window>
