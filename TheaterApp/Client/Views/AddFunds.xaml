    <Window x:Class="Client.Views.Wallet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="Wallet" Height="150" Width="300">
    
    <Grid>
        <Label Content="Adicionar Fundos" Margin="90 0 90 120" HorizontalAlignment="Center"></Label>
        <Label Content="Saldo:" Margin="200 30 60 95" FontSize="10" HorizontalContentAlignment="Right"></Label>
        <Label Content="3,30€" Name="lbFunds" Margin="240 30 10 95" FontSize="10" ></Label>
        <Label Content="Método:" Margin="20 60 210 65" FontSize="10" HorizontalContentAlignment="Right"></Label>
        <ComboBox Text="--Selecione o método" Name="cbPaymentMethod" Margin="90 60 80 70">
            <ComboBoxItem>Multibanco</ComboBoxItem>
            <ComboBoxItem>Cartão de Crédito</ComboBoxItem>
            <ComboBoxItem>Paypal</ComboBoxItem>
            <ComboBoxItem>MB Way</ComboBoxItem>
        </ComboBox>
        <Label Content="Valor:" Margin="20 82 210 45" FontSize="10" HorizontalContentAlignment="Right"></Label>
        <TextBox Margin="90 85 80 45"></TextBox>
        <Button Content="Adicionar" Margin="220 120 10 10"></Button>
    </Grid>
</Window>
